{% extends "PrestaCMSUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    {{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ "title_user_edit_profile" | trans({}, 'SonataUserBundle')}}
{% endblock %}
{% block sonata_profile_content %}
    <div class="row">
        <div class="span6">
            {{ form_errors(form) }}

            <form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="">
                <div class="form-item">
                    {{ form_errors(form.gender) }}
                    {{ form_label(form.gender, 'label_profile_gender', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.gender) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.firstname) }}
                    {{ form_label(form.firstname, 'label_profile_firstname', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.lastname) }}
                    {{ form_label(form.lastname, 'label_profile_lastname', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.website) }}
                    {{ form_label(form.website , 'label_profile_website', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.website) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.dateOfBirth) }}
                    {{ form_label(form.dateOfBirth, 'label_profile_dob', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.dateOfBirth) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.biography) }}
                    {{ form_label(form.biography, 'label_profile_biography', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.biography) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.locale) }}
                    {{ form_label(form.locale, 'label_profile_locale', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.locale) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.timezone) }}
                    {{ form_label(form.timezone, 'label_profile_timezone', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.timezone) }}
                </div>
                <div class="form-item">
                    {{ form_errors(form.phone) }}
                    {{ form_label(form.phone, 'label_profile_phone', {'attr': {'class': ''}}) }}
                    {{ form_widget(form.phone) }}
                </div>

                {{ form_rest(form) }}
                <div class="form-actions">
                    <input type="submit" value="{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}" class="button form-submit"/>
                </div>
            </form>
        </div>
    </div>
{% endblock %}